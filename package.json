{
  "name": "@tql/utils",
  "description": "custom javascript utility library",
  "version": "1.0.1",
  "main": "lib/index.js",
  "types": "typings",
  "private": false,
  "license": "MIT",
  "sideEffects": true,
  "scripts": {
    "check": "tsc --noEmit",
    "check:watch": "npm run types -- --watch",
    "format": "prettier --config .prettierrc --write \"src/**/*.ts\"",
    "build": "npm run clean && npm run build:type && npm run build:lib",
    "build:lib": "babel src --out-dir lib --extensions \".ts\"",
    "build:type": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -rf lib typings",
    "test": "jest",
    "prepublish": "npm run build",
    "public": "npm publish --access public"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "babel-jest": "^24.9.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src|__test__)/**/*.(js|ts|tsx)": [
      "npm run format",
      "git add"
    ],
    "src/**/*.(js|ts|tsx)": [
      "npm run check"
    ]
  },
  "files": [
    "lib",
    "typings"
  ]
}
